<Window x:Class="PicaPolloRey.POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pica Pollo Rey - POS" Width="1200" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="#FF061127">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Style="{StaticResource Card}" Padding="16" Background="{StaticResource CardBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Pica Pollo Rey"
                               Style="{StaticResource TitleText}"
                               FontSize="35"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding TodayText}"
                               Style="{StaticResource MutedText}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- ✅ NO Margin duplicado, y usamos Grid.Column -->
                <Button Grid.Column="1"
                        Content="Productos"
                        Style="{StaticResource GhostButton}"
                        Margin="12,0,0,0"
                        Command="{Binding OpenProductsCommand}"/>

                <Button Grid.Column="2"
                        Content="Reporte Del Día"
                        Style="{StaticResource GhostButton}"
                        Margin="10,0,0,0"
                        Command="{Binding OpenDailyReportCommand}"/>

                <Border Grid.Column="3"
                        Margin="12,0,0,0"
                        Background="{StaticResource Bg1Brush}"
                        CornerRadius="12"
                        Padding="12,8">
                    <TextBlock Text="POS v5 (MVVM)" Style="{StaticResource MutedText}"/>
                </Border>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.1*"/>
                <ColumnDefinition Width="1.4*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Products -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Productos"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <Grid Grid.Row="1" Margin="0,10,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Buscar:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Style="{StaticResource MutedText}"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding ProductsView}"
                              SelectedItem="{Binding SelectedProduct}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="200"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat=C}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- ✅ Botón abajo bien, sin Margin loco, sin pisar Background -->
                    <Button Grid.Row="3"
                            Content="Agregar al carrito"
                            Style="{StaticResource PrimaryButton}"
                            Height="52"
                            Margin="0,12,0,0"
                            Command="{Binding AddToCartCommand}"/>
                </Grid>
            </Border>

            <!-- Right: Cart -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="14,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Venta (Carrito)"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>

                    <DataGrid Grid.Row="1" Margin="0,10,0,10"
                              ItemsSource="{Binding Cart}"
                              SelectedItem="{Binding SelectedCartItem}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding Product.Name}" Width="*"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding UnitPrice, StringFormat=C}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Cant." Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="90"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding LineTotal, StringFormat=C}" Width="120" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Bottom area -->
                    <Grid Grid.Row="2" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Payment + actions -->
                        <Border Background="{StaticResource Bg1Brush}" CornerRadius="12" Padding="12" Margin="0,19,12,0">
                            <StackPanel>
                                <TextBlock Text="Método de pago" FontWeight="SemiBold" Foreground="White"/>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <RadioButton Content="Efectivo"
                                                 IsChecked="{Binding IsCash}"
                                                 Margin="0,0,14,0"
                                                 Foreground="White"/>
                                    <RadioButton Content="Tarjeta"
                                                 IsChecked="{Binding IsCard}"
                                                 Foreground="White"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <Button Content="Quitar item"
                                            Style="{StaticResource GhostButton}"
                                            Width="140"
                                            Margin="0,0,10,0"
                                            Command="{Binding RemoveSelectedCommand}" Height="29"/>
                                    <Button Content="Vaciar"
                                            Style="{StaticResource GhostButton}"
                                            Width="120"
                                            Command="{Binding ClearCartCommand}" Height="29"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Totals -->
                        <Border Grid.Column="1" Background="{StaticResource Bg1Brush}" CornerRadius="12" Padding="12" Margin="0,19,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Subtotal" Grid.Row="0" Style="{StaticResource MutedText}"/>
                                <TextBlock Text="{Binding SubtotalText}" Grid.Row="0" Grid.Column="1" FontWeight="SemiBold" Foreground="White"/>

                                <TextBlock Text="ITBIS (18%)" Grid.Row="1" Style="{StaticResource MutedText}" Margin="0,6,0,0"/>
                                <TextBlock Text="{Binding ItbisText}" Grid.Row="1" Grid.Column="1" Margin="0,6,0,0" FontWeight="SemiBold" Foreground="White"/>

                                <Border Grid.Row="2" Grid.ColumnSpan="2" Height="1"
                                        Background="{StaticResource BorderBrush}"
                                        Margin="0,12,0,12"/>

                                <TextBlock Text="TOTAL" Grid.Row="2" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,25,0,59" Grid.RowSpan="3"/>
                                <TextBlock Text="{Binding TotalText}" Grid.Row="3" Grid.Column="1" FontSize="20" FontWeight="Bold" Foreground="White"/>

                                <!-- ✅ Botón grande abajo (sin margen negativo) -->
                                <Button Grid.Row="4" Grid.ColumnSpan="2"
                                        Content="COBRAR (Ticket)"
                                        Style="{StaticResource PrimaryButton}"
                                        Height="54"
                                        Margin="0,14,0,0"
                                        Command="{Binding ChargeCommand}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
