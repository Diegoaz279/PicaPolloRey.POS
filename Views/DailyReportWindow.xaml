<Window x:Class="PicaPolloRey.POS.Views.DailyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reporte del Día" Width="980" Height="620"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Reporte del Día" Style="{StaticResource TitleText}"/>
                    <TextBlock Text="Ventas + Totales por método de pago" Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Refrescar" Style="{StaticResource GhostButton}"
                        Command="{Binding RefreshCommand}"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}">
                <DataGrid ItemsSource="{Binding Sales}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="90"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="90"/>
                        <DataGridTextColumn Header="Método" Binding="{Binding MetodoPago}" Width="120"/>
                        <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="ITBIS" Binding="{Binding Itbis, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="14,0,0,0">
                <StackPanel>
                    <TextBlock Text="Totales" FontSize="16" FontWeight="SemiBold"/>

                    <Border Background="{StaticResource Bg1Brush}" CornerRadius="12" Padding="12" Margin="0,12,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Total Día" Style="{StaticResource MutedText}"/>
                            <TextBlock Text="{Binding TotalDiaText}" Grid.Column="1" FontWeight="Bold"/>
                        </Grid>
                    </Border>

                    <Border Background="{StaticResource Bg1Brush}" CornerRadius="12" Padding="12" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Efectivo" Style="{StaticResource MutedText}"/>
                            <TextBlock Text="{Binding TotalEfectivoText}" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                    </Border>

                    <Border Background="{StaticResource Bg1Brush}" CornerRadius="12" Padding="12" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Tarjeta" Style="{StaticResource MutedText}"/>
                            <TextBlock Text="{Binding TotalTarjetaText}" Grid.Column="1" FontWeight="SemiBold"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
