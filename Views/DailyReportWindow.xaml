<Window x:Class="PicaPolloRey.POS.Views.DailyReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reporte del Día"
        Height="560" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FF1F2937" CornerRadius="10" Padding="12" Margin="0,0,0,12">
            <DockPanel>
                <TextBlock Text="Reporte del Día" Foreground="White" FontSize="18" FontWeight="Bold"/>
                <Button DockPanel.Dock="Right" Content="Refrescar" Width="110" Height="32"
                        Click="BtnRefresh_Click"/>
            </DockPanel>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Sales}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Venta ID" Binding="{Binding Id}" Width="90"/>
                <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="90"/>
                <DataGridTextColumn Header="Pago" Binding="{Binding MetodoPago}" Width="120"/>
                <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="ITBIS" Binding="{Binding Itbis, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderBrush="#FFE5E7EB" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Total Día" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalDiaText}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Efectivo" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalEfectivoText}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Tarjeta" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalTarjetaText}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>

                <Button Grid.Column="3" Content="Cerrar" Width="90" Height="34" VerticalAlignment="Bottom"
                        Margin="12,0,0,0" Click="BtnClose_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
