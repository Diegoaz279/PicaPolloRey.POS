<Window x:Class="PicaPolloRey.POS.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productos"
        Height="560" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#FF1F2937" CornerRadius="10" Padding="12" Margin="0,0,0,12">
            <DockPanel>
                <TextBlock Text="Gestión de Productos" Foreground="White" FontSize="18" FontWeight="Bold"/>
                <Button DockPanel.Dock="Right" Content="Refrescar" Width="110" Height="32"
                        Click="BtnRefresh_Click"/>
            </DockPanel>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Products}"
                  SelectedItem="{Binding SelectedProduct}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="160"/>
                <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat=C}" Width="120"/>
                <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Active}" Width="90"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" BorderBrush="#FFE5E7EB" BorderThickness="1" CornerRadius="10" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Nombre" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtName" Margin="0,6,0,0" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                    <TextBlock Text="Categoría" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtCategory" Margin="0,6,0,0" Height="30"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="12,0,0,0">
                    <TextBlock Text="Precio" FontWeight="SemiBold"/>
                    <TextBox x:Name="TxtPrice" Margin="0,6,0,0" Height="30"/>
                </StackPanel>

                <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,60,0,0">
                    <Button Content="Nuevo" Width="90" Height="34" Margin="0,0,10,0" Click="BtnNew_Click"/>
                    <Button Content="Guardar" Width="100" Height="34" Margin="0,0,10,0" Click="BtnSave_Click"/>
                    <Button Content="Desactivar/Activar" Width="150" Height="34" Margin="0,0,10,0" Click="BtnToggleActive_Click"/>
                    <Button Content="Cerrar" Width="90" Height="34" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
