<Window x:Class="PicaPolloRey.POS.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Productos" Width="980" Height="620"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource Card}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Gestión de Productos" Style="{StaticResource TitleText}"/>
                    <TextBlock Text="Agregar, editar o activar/desactivar" Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refrescar" Style="{StaticResource GhostButton}" Margin="0,0,10,0"
                            Command="{Binding RefreshCommand}"/>
                    <Button Content="Nuevo" Style="{StaticResource GhostButton}"
                            Command="{Binding NewCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}">
                <DataGrid ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="220"/>
                        <DataGridTextColumn Header="Precio" Binding="{Binding Price, StringFormat=C}" Width="120"/>
                        <DataGridTextColumn Header="Activo" Binding="{Binding Active}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource Card}" Margin="14,0,0,0">
                <StackPanel>
                    <TextBlock Text="Editor" FontSize="16" FontWeight="SemiBold"/>

                    <TextBlock Text="Nombre" Margin="0,12,0,6" Style="{StaticResource MutedText}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Categoría" Margin="0,12,0,6" Style="{StaticResource MutedText}"/>
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Precio" Margin="0,12,0,6" Style="{StaticResource MutedText}"/>
                    <TextBox Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button Content="Guardar" Style="{StaticResource PrimaryButton}" Width="140"
                                Command="{Binding SaveCommand}"/>
                        <Button Content="Activar/Desactivar" Style="{StaticResource GhostButton}" Margin="10,0,0,0"
                                Command="{Binding ToggleActiveCommand}"/>
                    </StackPanel>

                    <TextBlock Text="Tip: desactivar es mejor que borrar."
                               Style="{StaticResource MutedText}" Margin="0,14,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
