<Window x:Class="PicaPolloRey.POS.Views.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket" Width="520" Height="620"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="16">
		<Border Style="{StaticResource Card}" Padding="16">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<StackPanel>
					<TextBlock Text="Pica Pollo Rey" Style="{StaticResource TitleText}"/>
					<TextBlock Text="{Binding TicketNumber}" Style="{StaticResource MutedText}" Margin="0,4,0,0"/>
					<TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Style="{StaticResource MutedText}"/>
					<TextBlock Text="{Binding PaymentMethod}" Style="{StaticResource MutedText}"/>
				</StackPanel>

				<Border Grid.Row="1" Background="{StaticResource BorderBrush}" Height="1" Margin="0,14,0,12"/>

				<DataGrid Grid.Row="2" ItemsSource="{Binding Items}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False">
					<DataGrid.Columns>
						<DataGridTextColumn Header="Producto" Binding="{Binding Product.Name}" Width="*"/>
						<DataGridTextColumn Header="Cant." Binding="{Binding Quantity}" Width="80"/>
						<DataGridTextColumn Header="Total" Binding="{Binding LineTotal, StringFormat=C}" Width="120"/>
					</DataGrid.Columns>
				</DataGrid>

				<Border Grid.Row="3" Background="{StaticResource Bg1Brush}" CornerRadius="12" Padding="12" Margin="0,12,0,0">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<TextBlock Text="Subtotal" Style="{StaticResource MutedText}"/>
						<TextBlock Text="{Binding Subtotal, StringFormat=C}" Grid.Column="1" FontWeight="SemiBold"/>

						<TextBlock Text="ITBIS" Grid.Row="1" Style="{StaticResource MutedText}" Margin="0,6,0,0"/>
						<TextBlock Text="{Binding Itbis, StringFormat=C}" Grid.Row="1" Grid.Column="1" Margin="0,6,0,0" FontWeight="SemiBold"/>

						<TextBlock Text="TOTAL" Grid.Row="2" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
						<TextBlock Text="{Binding Total, StringFormat=C}" Grid.Row="2" Grid.Column="1" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
					</Grid>
				</Border>
			</Grid>
		</Border>
	</Grid>
</Window>
